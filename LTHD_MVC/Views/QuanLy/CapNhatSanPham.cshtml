@using LTHD_MVC.Models;
@{
    ViewBag.Title = "Cập nhật sản phẩm - Quản lý sản phẩm - Admin Control Panel - Thế giới máy tính";
    ViewBag.BreadCrumb = "Quản lý sản phẩm - Cập nhật sản phẩm";
    ViewBag.ClassSanPham = "active";
    Layout = "~/Views/QuanLy/Layout.cshtml";
    List<NhaCungCap> ListNhaCungCap = (List<NhaCungCap>)ViewBag.ListNhaCungCap;
    SanPham sp = (SanPham)ViewBag.SanPham;
}
<div class="row">
    <div class="col-xs-12">
        <form class="form-horizontal" id="FormThemMoi">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Tên sản phẩm </label>
                <div class="col-sm-9">
                    <input type="text" name="tensanpham" id="tensanpham" class="col-xs-10 col-sm-5" required value="@sp.TenSP" />
                    <input type="hidden" name="idsanpham" id="idsanpham" value="@sp.Id" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-nhacungcap"> Nhà cung cấp </label>
                <div class="col-sm-9">
                    <select class="col-xs-10 col-sm-5" name="nhacungcap">
                        @foreach (NhaCungCap ncc in ListNhaCungCap)
                        {
                            <option value="@ncc.Id" @if (@ncc.Id == @sp.Id_NCC) { @Html.Raw("selected=\"selected\"") ; }>@ncc.TenNhaCC</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> HDD </label>
                <div class="col-sm-9">
                    <input type="number" name="hdd" min="1" value="@sp.HDD" class="col-xs-2 col-sm-1" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> GB </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> RAM </label>
                <div class="col-sm-9">
                    <input type="number" name="ram" min="1" value="@sp.RAM" class="col-xs-2 col-sm-1" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> GB </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> CPU </label>
                <div class="col-sm-9">
                    <input type="text" name="cpu" class="col-xs-10 col-sm-5" required value="@sp.CPU" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Đơn giá </label>
                <div class="col-sm-9">
                    <input type="number" name="dongia" min="1" value="@sp.DonGia" class="col-xs-4 col-sm-2" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> VNĐ </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Hình ảnh </label>
                <div class="col-sm-4">
                    <img src="/Hinh/MayTinh/sanpham/@sp.HinhAnh" />
                    <input type="file" name="hinh" id="hinh" class="col-xs-4 col-sm-2" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Bảo hành </label>
                <div class="col-sm-9">
                    <input type="number" name="baohanh" min="1" max="36" value="@sp.BaoHanh.Replace(" tháng","")" class="col-xs-4 col-sm-2" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> Tháng </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Số lượng </label>
                <div class="col-sm-9">
                    <input type="number" name="soluong" min="1" value="@sp.SoLuong" class="col-xs-4 col-sm-2" required />
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info no-border" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Cập nhật
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <a href="javascript:history.back();" class="btn no-border" type="button">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Quay về
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#hinh').ace_file_input({
            no_file: 'No File ...',
            btn_choose: 'Choose',
            btn_change: 'Change',
            droppable: false,
            onchange: null,
            thumbnail: true,
            whitelist: 'gif|png|jpg|jpeg',
            blacklist: 'exe|php'
        });

        $('#FormThemMoi').submit(function () {
            $.ajax({
                url: '/QuanLy/SanPham/XuLyCapNhatSanPham',
                type: 'POST',
                data: new FormData(this),
                cache: false,
                processData: false,
                contentType: false,
                success: function (data) {
                    if (data == 1) {
                        BootstrapDialog.alert('Cập nhật thành công', function () {
                            location.href = '/QuanLy/SanPham';
                        });
                    }
                    else {
                        BootstrapDialog.alert('Có lỗi trong khi cập nhật, vui lòng thử lại!');
                    }
                }
            });
            return false;
        });
    });
</script>