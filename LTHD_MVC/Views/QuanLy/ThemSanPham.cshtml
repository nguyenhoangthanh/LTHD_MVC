@using LTHD_MVC.Models;
@{
    ViewBag.Title = "Thêm Sản Phẩm - Quản lý sản phẩm - Admin Control Panel - Thế giới máy tính";
    ViewBag.BreadCrumb = "Quản lý sản phẩm - Thêm Sản Phẩm";
    ViewBag.ClassSanPham = "active";
    Layout = "~/Views/QuanLy/Layout.cshtml";
    List<NhaCungCap> ListNhaCungCap = (List<NhaCungCap>)ViewBag.ListNhaCungCap;
}
<div class="row">
    <div class="col-xs-12">
        <form class="form-horizontal" method="post" action="/QuanLy/SanPham/XuLyThemSanPham" enctype="multipart/form-data" >
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Tên sản phẩm </label>
                <div class="col-sm-9">
                    <input type="text" name="tensanpham" class="col-xs-10 col-sm-5" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-nhacungcap"> Nhà cung cấp </label>
                <div class="col-sm-9">
                    <select class="col-xs-10 col-sm-5" name="nhacungcap">
                        @foreach (NhaCungCap ncc in ListNhaCungCap)
                        {
                            <option value="@ncc.Id">@ncc.TenNhaCC</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> HDD </label>
                <div class="col-sm-9">
                    <input type="number" name="hdd" min="1" value="1" class="col-xs-2 col-sm-1" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> GB </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> RAM </label>
                <div class="col-sm-9">
                    <input type="number" name="ram" min="1" value="1" class="col-xs-2 col-sm-1" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> GB </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> CPU </label>
                <div class="col-sm-9">
                    <input type="text" name="cpu" class="col-xs-10 col-sm-5" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Đơn giá </label>
                <div class="col-sm-9">
                    <input type="number" name="dongia" min="1" value="1" class="col-xs-4 col-sm-2" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> VNĐ </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Hình ảnh </label>
                <div class="col-sm-4">
                    <input type="file" name="hinh" id="hinh" class="col-xs-4 col-sm-2" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Bảo hành </label>
                <div class="col-sm-9">
                    <input type="number" name="baohanh" min="1" max="36" value="1" class="col-xs-4 col-sm-2" required />
                    <label class="control-label no-padding-right" style="margin-left: 10px;"> Tháng </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Số lượng </label>
                <div class="col-sm-9">
                    <input type="number" name="soluong" min="1" value="1" class="col-xs-4 col-sm-2" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Trạng thái </label>
                <div class="col-sm-9">
                    <input name="trangthai" class="ace ace-switch" type="checkbox" checked ="checked" />
                    <span class="lbl"></span>
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Thêm mới
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Làm lại
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
