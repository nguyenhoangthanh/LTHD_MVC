    <![endif]-->
    <style>
        body {
            font-family: "Segoe UI" !important;
        }
    </style>
</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">ACP</span>
                                <span class="white" id="id-text2">Thế giới máy tính</span>
                            </h1>
                            <h4 class="blue" id="id-company-text">&copy; Trường Đại học Sài Gòn</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            Đăng nhập quản trị viên
                                        </h4>

                                        <div class="space-6"></div>

                                        <form id="FormDangNhap">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="email" name="email" class="form-control" placeholder="Email của bạn" required />
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="password" name="password" class="form-control" placeholder="Mật khẩu của bạn" required />
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="button" class="pull-right btn btn-primary no-border">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        Đăng nhập
                                                    </button>
                                                </div>
                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.widget-body -->
                    </div><!-- /.signup-box -->
                </div><!-- /.position-relative -->
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="/assets/js/jquery.2.1.1.min.js"></script>

