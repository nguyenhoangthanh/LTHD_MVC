@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Đăng nhập - Admin Control Panel - Thế giới máy tính</title>
    <meta name="description" content="Đăng nhập - Admin Control Panel - Thế giới máy tính" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/font-awesome/4.2.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/assets/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />
    <link href="~/Content/Css/bootstrap-dialog.min.css" rel="stylesheet" />
    <script src="/assets/js/ace-extra.min.js"></script>
    <script src="/assets/js/jquery.2.1.1.min.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/bootstrap-dialog.min.js"></script>
    <style>
        body {
            font-family: "Segoe UI" !important;
        }
    </style>
</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">ACP</span>
                                <span class="white" id="id-text2">Thế giới máy tính</span>
                            </h1>
                            <h4 class="blue" id="id-company-text">&copy; Trường Đại học Sài Gòn</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            Đăng nhập quản trị viên
                                        </h4>

                                        <div class="space-6"></div>

                                        <form id="FormDangNhap">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="email" name="email" value="thanh@gmail.com" class="form-control" placeholder="Email của bạn" required />
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input type="password" value="1thanh" name="password" class="form-control" placeholder="Mật khẩu của bạn" required />
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="submit" class="pull-right btn btn-primary no-border">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        Đăng nhập
                                                    </button>
                                                </div>
                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.widget-body -->
                    </div><!-- /.signup-box -->
                </div><!-- /.position-relative -->
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='assets/js/jquery.min.js'>" + "<" + "/script>");
        if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery-ui.custom.min.js"></script>
    <script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
    <script src="/assets/js/jquery.easypiechart.min.js"></script>
    <script src="/assets/js/jquery.sparkline.min.js"></script>
    <script src="/assets/js/jquery.flot.min.js"></script>
    <script src="/assets/js/jquery.flot.pie.min.js"></script>
    <script src="/assets/js/jquery.flot.resize.min.js"></script>
    <script src="/assets/js/ace-elements.min.js"></script>
    <script src="/assets/js/ace.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('body').attr('class', 'login-layout blur-login');
            $('#id-text2').attr('class', 'white');
            $('#id-company-text').attr('class', 'light-blue');

            $('#FormDangNhap').submit(function () {
                $.ajax({
                    url: '/QuanLy/DangNhap/XuLyDangNhap',
                    type: 'POST',
                    data: new FormData(this),
                    cache: false,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        if (data == -1) {
                            BootstrapDialog.alert('Email hoặc mật khẩu không đúng, vui lòng thử lại!');
                        }
                        else {
                            location.href = data;
                        }
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>