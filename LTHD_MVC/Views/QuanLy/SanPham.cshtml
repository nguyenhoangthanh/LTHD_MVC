@using LTHD_MVC.Models;
@{
    ViewBag.Title = "Quản lý sản phẩm - Admin Control Panel - Thế giới máy tính";
    ViewBag.BreadCrumb = "Quản lý sản phẩm";
    ViewBag.ClassSanPham = "active";
    Layout = "~/Views/QuanLy/Layout.cshtml";
    List<SanPham> ListSanPham = (List<SanPham>)ViewBag.ListSanPham;
    List<NhaCungCap> ListNhaCungCap = (List<NhaCungCap>)ViewBag.ListNhaCungCap;
}
<div class="row">
    <div class="col-xs-12">
        <div style="margin-bottom:10px;">
            <a class="btn btn-success" href="/QuanLy/SanPham/ThemSanPham">Thêm mới</a>
        </div>
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Nhà cung cấp</th>
                        <th>Đơn giá</th>
                        <th>Hình ảnh</th>
                        <th>Số lượng</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (SanPham sp in ListSanPham)
                    {
                        <tr>
                            <td>@sp.TenSP</td>
                            <td>@ListNhaCungCap.Where(i => i.Id == sp.Id_NCC).FirstOrDefault().TenNhaCC</td>
                            <td>@sp.DonGia</td>
                            <td style="text-align:center;"><img src="/Hinh/MayTinh/sanpham/@sp.HinhAnh" width="80" /></td>
                            <td>0</td>
                            <td>
                                <div class="hidden-sm hidden-xs action-buttons">
                                    <a class="blue" href="/QuanLy/SanPham/ChiTietSanPham/@sp.Id">
                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                    </a>

                                    <a class="green" href="/QuanLy/SanPham/CapNhatSanPham/@sp.Id">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>

                                    <a class="red" href="/QuanLy/SanPham/XoaSanPham/@sp.Id">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>

                                <div class="hidden-md hidden-lg">
                                    <div class="inline pos-rel">
                                        <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                            <i class="ace-icon fa fa-caret-down icon-only bigger-130"></i>
                                        </button>

                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                            <li>
                                                <a href="/QuanLy/SanPham/ChiTietSanPham/@sp.Id" class="tooltip-info" data-rel="tooltip" title="View">
                                                    <span class="blue">
                                                        <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                    </span>
                                                </a>
                                            </li>

                                            <li>
                                                <a href="/QuanLy/SanPham/CapNhatSanPham/@sp.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                    <span class="green">
                                                        <i class="ace-icon fa fa-pencil-square-o bigger-130"></i>
                                                    </span>
                                                </a>
                                            </li>

                                            <li>
                                                <a href="/QuanLy/SanPham/XoaSanPham/@sp.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                    <span class="red">
                                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                    </span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
