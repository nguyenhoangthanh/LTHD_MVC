@using LTHD_MVC.Models;

@{
    Layout = "~/Views/Index/Layout.cshtml";
    ViewBag.Title = "Index";
    List<SanPham> listsp = (List<SanPham>)ViewBag.listsp;
    }

@foreach (var sp in listsp)
{
    <div class="col-md-3" style="border-radius: 10px; border: 1px solid;  margin: 20px">
        <p style="color:red; font-weight:bold; text-align:center; font-size:20px;">@sp.TenSP</p>
        <div style="margin-top:20px; text-align:center;"><img src="~/Hinh/MayTinh/sanpham/@sp.HinhAnh" width="120" height="120" /></div>
        <p style="color:red; font-weight:bold; text-align:center;"> Giá: @sp.DonGia VND</p>
        <a href="/Index/ChiTietSanPham/@sp.Id"><input type="button" class="btn btn-primary" style="margin-bottom:15px;" value="Chi tiết" /></a>
        <a href="/Index/ThemVaoGioHang/@sp.Id"><input type="button" class="btn btn-primary" style="margin-bottom:15px;" value="Chọn mua" /></a>    
    </div>
}

