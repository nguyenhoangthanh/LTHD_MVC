@using LTHD_MVC.Models;

@{
    Layout = "~/Views/Index/Layout.cshtml";
    ViewBag.Title = "Index";
    var listspnsx = (List<SanPham>)ViewBag.ListSP;
    var listccc = (List<NhaCungCap>)ViewBag.ListNhaCungCap;
}
@foreach (var sp in listspnsx)
