@using LTHD_MVC.Models;
@using LTHD_MVC.Helper;
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/TrangChu/Layout.cshtml";
    DonDH ddh = (DonDH)ViewBag.DonDH;
    if (ddh == null)
    {
        Response.Write("<script> location.href = '/'; </script>");
    }
    
    List<GioHang> ListGioHang = (List<GioHang>)ViewBag.ListGioHang;
    int stt = 1;
}

<h2 style="text-align:center; color:greenyellow;">Đặt hàng thành công</h2>
<h4 style=" margin-top: 20px; color: #aa1919; font-weight: bold;">Thông tin sản phẩm đã đặt:</h4>
<table class="table table-bordered">
    <thead style="background:#766d6d; color:white; ">
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (GioHang gh in ListGioHang)
        {
            <tr>
                <td>@Html.Raw(stt++)</td>
                <td>@gh.TenSanPham</td>
                <td>@gh.SoLuong</td>
                <td>@Html.FormatValue(gh.DonGia, "{0:c0}")</td>
                <td>@Html.FormatValue(gh.ThanhTien, "{0:c0}")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Tổng tiền</td>
            <td>@Html.FormatValue(ViewBag.TongTien, "{0:c0}")</td>
        </tr>
    </tfoot>
</table>
<h4 style=" margin-top: 50px; color: #aa1919; font-weight: bold;">Thông tin đơn đặt hàng</h4>
<form class="form-horizontal">
    <div class="form-group">
        <label for="NgayDat" class="col-sm-5 control-label">Ngày đặt hàng</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" id="NgayDat" name="NgayDat" value="@ddh.NgayDat.ToString("yyyy-MM-dd")" disabled>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="form-group">
        <label for="NgayGiao" class="col-sm-5 control-label">Ngày giao hàng</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" id="NgayGiao" name="NgayGiao" value="@ddh.NgayGiao.ToString("yyyy-MM-dd")" disabled>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="form-group">
        <label for="GhiChu" class="col-sm-5 control-label">Ghi chú</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="GhiChu" name="GhiChu" disabled value="@ddh.GhiChu">
        </div>
        <div class="col-sm-1"></div>
    </div>


    <h4 style=" margin-top: 50px; color: #aa1919; font-weight: bold;">Thông tin khách hàng</h4>
    <div class="form-group">
        <label for="HoTen" class="col-sm-5 control-label">Họ tên khách hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="HoTen" name="HoTen" value="@ddh.HoTen" disabled>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="form-group">
        <label for="DiaChi" class="col-sm-5 control-label">Địa chỉ khách hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@ddh.DiaChi" disabled>
        </div>
        <div class="col-sm-1"></div>
    </div>
    @*<div class="form-group">
            <label for="Email" class="col-sm-5 control-label">Email khách hàng</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="Email" name="Email" value="@Session["Email"]" disabled>
            </div>
            <div class="col-sm-1"></div>
        </div>*@
    <div class="form-group">
        <label for="SoDienThoai" class="col-sm-5 control-label">Số điện thoại</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="DienThoai" name="DienThoai" value="@ddh.DienThoai" disabled>
        </div>
        <div class="col-sm-1"></div>
    </div>
</form>